<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
   >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayoutGroupBaseAdapterName" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textViewGroupBaseAdapterName"
            android:textSize="20dp"
            android:padding="8dp"/>

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:columnCount="5"
            android:rowCount="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/grouptextTotalExpenses"
                android:id="@+id/textViewGroupBaseAdapterTotalExpenseText"
                android:layout_row="0"
                android:layout_column="0"
                android:padding="2dp"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="10"
                android:id="@+id/textViewGroupBaseAdapterTotalExpense"
                android:layout_row="0"
                android:layout_column="1"
                android:padding="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/grouptextExpensesPerson"
                android:id="@+id/textViewGroupBaseAdapterExpensesPersonText"
                android:layout_row="0"
                android:layout_column="3"
                android:padding="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="5"
                android:id="@+id/textViewGroupBaseAdapterExpensesPerson"
                android:layout_row="0"
                android:layout_column="4"
                android:padding="2dp"
               />
        </GridLayout>

    </LinearLayout>

</RelativeLayout>